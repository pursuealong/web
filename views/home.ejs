<!doctype html>
<html>
<head>
  <title>PursueAlong</title>
  <script src="bower_components/angular/angular.js"></script>
  <script type="text/javascript" src="./bower_components/jquery/dist/jquery.min.js"></script>
  <script type="text/javascript" src="./bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="js/controller.js"></script>
  <link rel="stylesheet" href="./bower_components/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="./css/home.css">
</head>
<body ng-app="home">
  <% if (!user) {%> <!-- DEBUG -->
  <div class="container">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="page-header">
        <h1 class="text-success"><span class="glyphicon glyphicon-lock"></span> User Authentication</h1>
        <p><small class="text-info">Login or Register with:<small></p>
      </div>
      <a href="/login" class="btn btn-default"><span class="fa fa-user"></span> Local Login</a><br><br>
      <a href="/register" class="btn btn-default"><span class="fa fa-user"></span> Local Signup</a><br><br>
      <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a><br><br>
    </div>
  </div>
  <% } else { %>
  <!--
  put user specified newsfeed/page here.
  -->
  <div id = "container" ng-controller="main" ng-init="init()">
    <div class="collapse navbar-collapse" id="top_bar">
      <div id = "search_bar" class = "col-md-10">
          <label> Search: </label>
          <input type = "text" id = "query" ng-model="inputVal">
          {{inputVal}}
      </div> <!-- end of search_bar -->
      <ul class="nav navbar-nav" id="top_bar_elem">
        <li><a href="/">Home</a></li>
        <li><a href="/profile"><%= user.local.first_name %> <%= user.local.last_name %></a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Account<span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="/logout">Logout</a></li>
            <li><a href="#">Create Group</a></li>
            <li><a href="#"></a></li>
            <li class="divider"></li>
            <li class="dropdown-header">Nav header</li>
            <li><a href="#">Separated link</a></li>
            <li><a href="#">One more separated link</a></li>
          </ul>
        </li>
      </ul>
    </div>
    <div class="col-md-2" id="tool_bar">
      <label> Groups: </label>
      <div class="group_button">
        Startup
      </div>
    </div>
    <div class="col-md-10" id="content_bar">
      <input type = "text" id = "post_query" ng-model="postVal">
      <button type = "button" ng-click="doPost()"> Post </button>
      <div id = "newsfeed" ng-repeat= "elem in content | limitTo: 20 track by $index">
        {{elem.content}} by {{elem.author}} from {{elem.city}}
      </div>
    </div>
  </div>
  <% } %>
</body>
</html>
